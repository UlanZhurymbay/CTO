<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CTO.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:main="clr-namespace:CTO.Views.MainPages.Main"
    xmlns:register="clr-namespace:CTO.Views.Register"
    xmlns:profile="clr-namespace:CTO.Views.MainPages.Profile" 
    Shell.TabBarBackgroundColor="#bdbaff" Shell.TabBarTitleColor="Blue" Shell.TabBarUnselectedColor="Black">

    <ShellContent FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        Title="Home"
        ContentTemplate="{DataTemplate register:LoadingPage}"
        Route="LoadingPage"/>
    <ShellContent FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        Title="Home"
        ContentTemplate="{DataTemplate register:LoginPage}"
        Route="LoginPage"/>
</Shell>
